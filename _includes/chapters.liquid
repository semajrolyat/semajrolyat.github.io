<div class="col">
  <a href="{% if chapter.redirect %}{{ chapter.redirect }}{% else %}{{ chapter.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if chapter.img %}
        {%
          include figure.liquid
          loading="eager"
          path=chapter.img
          sizes = "250px"
          alt="chapter thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ chapter.title }}</h2>
        <p class="card-text">{{ chapter.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if chapter.github %}
            <div class="chapter-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ chapter.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if chapter.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ chapter.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
